  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
.py-5.d-block.mx-auto.text-center
  .container
    h1 GENQ KYC FORM
.container
  form(name='regForm' action='/form' method='POST' onsubmit='return Validate()')
    h4 Bio Data
    br
    .row.g-3
      .col-sm-6
        label.form-label(for='Surname') First Name
        input.form-control(type='text' name='First Name')
      .col-sm-6
        label.form-label(for='givenName') Last Name
        input.form-control(type='text' name='Last Name')
      .col-md-6
        label.form-label(for='dateOfBirth') Date of Birth
        input.form-control(type='date' name='dateOfBirth')
      .col-md-6
        label.form-label(for='Place of residence') Gender
        input.form-control(type='text' name='Gender')
      .col-md-8
        label.form-label(for='category') Country
        select.form-control(name='category')
          option(value='Category' selected='' disabled='disabled') -- Select country --
          option(value='Returnee') Uganda
          option(value='Contact') Kenya
          option(value='Alert') Tanzania
          option(value='Volunteer') Rwanda
          option(value='Volunteer') Burundi
        #cnt.text-danger.font-weight-bold.small
      .col-sm-6
        label.form-label(for='occupation') Town
        input.form-control(type='text' name='occupation')
        #occup.text-danger.font-weight-bold.small
      .col-sm-6
        label.form-label(for='nationality') Zip code
        input.form-control(type='text' name='nationality')
        #Nat.text-danger.font-weight-bold.small
      .col-sm-6
        label.form-label(for='occupation') Phone number1
        input.form-control(type='text' name='occupation')
        #occup.text-danger.font-weight-bold.small
      .col-sm-6
        label.form-label(for='nationality') Phone number2
        input.form-control(type='text' name='nationality')
        #Nat.text-danger.font-weight-bold.small
    .main-agileinfo
      .agileits-top
        form(action='#' method='post')
          input#email.text.email(type='email' name='email' placeholder='Email' required='')
          br
          input#submit(type='submit' value='Submit')
        br
